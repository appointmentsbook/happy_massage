<h1 class="ls-title-intro ls-ico-home"><%= t(:my_schedules) %></h1>

<h2 class="ls-title-4"><%= t(:next_massage) %></h2>
<hr>
<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <a href="#" >Segunda-feira</a>
      <small> 14:45 </small>
    </div>
    <div class="col-md-3 ls-txt-right">
      <a onClick="return confirm('Você só poderá remarcar a massagem na próxima semana. Tem certeza que quer cancelar?')" href="#" class="ls-btn-primary">Cancelar</a>
    </div>
  </header>
</div>
<div class="ls-alert-danger"><strong>Atenção:</strong><br> Você não pode mais fazer o cancelamento por 1 semana.</div>
<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <a href="#" >Segunda-feira</a>
      <small> 14:45 </small>
    </div>
  </header>
</div>
<br>
<h2 class="ls-title-4"><%= t(:historical_schedules) %></h2>
<hr>

<% if @massages.nil? %>
  <%= t(:no_schedule_massages_yet) %>
<% else %>
  <% @massages.each do |massage| %>
    <div class="ls-list">
      <header class="ls-list-header">
        <div class="ls-list-title col-md-9">
          <a href="#">Segunda-feira</a>
          <small><%= l(massage.timetable) %></small>
        </div>
        <div class="col-md-3 ls-txt-right">
          <span class="ls-tag-success"><%= t(massage.status) %></span>
        </div>
      </header>
    </div>
  <% end %>
<% end %>